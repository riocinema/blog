<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>{{ title or "Rio Blog" }}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link rel="stylesheet" href="/css/site.css">

  <!-- Material Symbols -->
  <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet">
</head>

<body>
  <header class="site-header">
    <a href="/">
      <img src="images/RFlogo-demo.png" alt="Rio Forever">
    </a>

    <div class="header-actions">
      <a href="/search/" aria-label="Search">
        <span class="material-symbols-outlined">search</span>
      </a>
      <a href="/about/" aria-label="About">
        <span class="material-symbols-outlined">info</span>
      </a>
    </div>

{% set isSearch = page.url and page.url.startsWith("/search") %}
{% set isAbout = page.url and page.url.startsWith("/about") %}

<div class="header-actions">
  <a class="icon-btn{% if isSearch %} is-active{% endif %}" href="/search/" aria-label="Search">
    <span class="material-symbols-outlined">search</span>
  </a>

  <a class="icon-btn{% if isAbout %} is-active{% endif %}" href="/about/" aria-label="About">
    <span class="material-symbols-outlined">info</span>
  </a>
</div>

  </header>

  <div id="hover-preview"></div>

  <main>
    {{ content | safe }}
  </main>

  <script src="/js/hover-preview.js"></script>
</body>
</html>

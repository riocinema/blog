<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>{{ title or "Rio Forever Blog" }}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link rel="stylesheet" href="/css/site.css">

  <!-- Material Symbols -->
  <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet">

  <!-- Neue Haas Grotesk -->
  <link rel="stylesheet" href="https://use.typekit.net/xgj8zjx.css">
</head>

<body>
  {% set isSearch = page.url and page.url.startsWith("/search") %}
  {% set isAbout = page.url and page.url.startsWith("/about") %}

  <header class="site-header">
<a class="site-logo" href="/">
  <img class="logo-normal" src="/img/RFlogo-demo.png" alt="Rio Forever">
  <img class="logo-a11y" src="/img/RFlogo-demo-access.png" alt="Rio Forever">
</a>

    <div class="header-actions">
      <a class="icon-btn{% if isSearch %} is-active{% endif %}" href="/search/" aria-label="Search">
        <span class="material-symbols-outlined">search</span>
      </a>

      <a class="icon-btn{% if isAbout %} is-active{% endif %}" href="/about/" aria-label="About">
        <span class="material-symbols-outlined">info</span>
      </a>

<a
  id="a11yToggle"
  class="icon-btn"
  href="#"
  role="button"
  aria-pressed="false"
  aria-label="Toggle accessibility mode"
>
  <span class="material-symbols-outlined">accessibility_new</span>
</a>

    </div>
  </header>

  <div id="hover-preview"></div>

  <main>
    {{ content | safe }}
  </main>

<footer class="site-footer">
  Â© RIO CINEMA 2026
</footer>

<script src="/js/a11y-toggle.js" defer></script>

  <script src="/js/hover-preview.js"></script>
</body>
</html>

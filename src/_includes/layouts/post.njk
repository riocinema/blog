<article>
  <header class="post-header">
    <h1>{{ title }}</h1>

    <div class="post-meta">
      {{ date | readableDate }}
      {% if author %}<br>by {{ author }}{% endif %}
    </div>
  </header>

  {% if featuredImage %}
    <img src="{{ featuredImage }}" alt="{{ featuredImageAlt or '' }}">
  {% endif %}

  <div class="post-body">
    {{ content | safe }}
  </div>

  <nav class="post-nav">
    {% if collections.posts[collections.posts.indexOf(page) - 1] %}
      <a href="{{ collections.posts[collections.posts.indexOf(page) - 1].url }}">
        ← Previous
      </a>
    {% endif %}

    {% if collections.posts[collections.posts.indexOf(page) + 1] %}
      <a href="{{ collections.posts[collections.posts.indexOf(page) + 1].url }}">
        Next →
      </a>
    {% endif %}
  </nav>
</article>
